{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],
  "labels": ["dependencies"],
  "lockFileMaintenance": {
    "enabled": true,
    "automerge": true,
    "automergeType": "pr",
    "platformAutomerge": true
  },
  "osvVulnerabilityAlerts": true,
  "rangeStrategy": "bump",
  "rebaseWhen": "behind-base-branch",
  "reviewers": ["ryuudotgg"],
  "vulnerabilityAlerts": {
    "vulnerabilityFixStrategy": "highest"
  }
}
